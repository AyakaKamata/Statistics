			"",
			"    def plot_losses(self):",
			"        \"\"\"Plot loss values over epochs.\"\"\"",
			"        sns.set_theme()",
			"        sns.relplot(x=range(1, len(self.losses_) + 1), y=self.losses_, kind=\"line\", marker=\"o\")",
